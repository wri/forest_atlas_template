@require 'config'
@require 'grid'
@require 'base'

html
body
  font-family $fontFamily
  height 100%
  width 100%
  padding 0
  margin 0

.map
  margin 10px auto
  height 400px
  width 100%

.popup-content
  margin 20px auto
  width 100%

.popup-content dl
  margin 5px auto
  display table
  width 95%

.popup-content dl:nth-child(odd)
  background $lightGrayHighlight

.popup-content dt
.popup-content dd
  display table-cell
  font-size 14px
  padding 5px
  width 50%

.popup-content dt
  font-weight 500
