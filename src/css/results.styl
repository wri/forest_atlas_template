.results__fires-badge
.results__loss-badge
.results__gain-badge
  margin 20px auto 10px
  text-align center
  padding 5px
  width 200px

.results__fires-badge
  border 2px solid $goldTheme

.results__loss-badge
  border 2px solid #E291B2

.results__gain-badge
  border 2px solid #7978E8

.results__fires-active
.results__fires-count
  color #E94E02

.results__fires-count
.results__loss--count
.results__gain--count
  font-weight bold
  font-size 24px

.results__loss--count
.results__loss--unit
  color #E291B2

.results__gain--count
.results__gain--unit
  color #7978E8

.results__loss--unit
.results__gain--unit
  padding 0 3px

.results__chart-container
  max-width 100%

.highcharts-legend
  width 250px
