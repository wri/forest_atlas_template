.legend-panel 
  background #fff
  bottom 20px
  color $darkGray
  padding 5px
  right 20px
  transition width 0.5s ease-in-out
  width 300px
.legend-title
  cursor pointer
  text-transform uppercase
  width 100%
  span:nth-child(1)
    display inline-block
    padding-right 0.5em
.legend-collapsed
  cursor pointer
  width 100px
  