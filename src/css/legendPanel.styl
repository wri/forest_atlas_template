.legend-panel
  background #fff
  bottom 20px
  color $darkGray
  max-height 50%
  padding 5px
  right 20px
  transition width 0.5s ease-in-out
  width 300px
.legend-title
  cursor pointer
  height 25px
  text-transform uppercase
  width 100%
  span:nth-child(1)
    display inline-block
    padding-right 0.5em
.legend-collapsed
  cursor pointer
  width 100px
#legend
  height 140px
  overflow-y auto
