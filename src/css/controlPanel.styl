.control-panel
  background white
  bottom 20px
  right 40px
  width 76px

.control-panel__list
  border-bottom 1px solid $lightGray
  flex-wrap wrap
  display flex
  padding 0
  margin 0
  & li
    border-right 1px solid $lightGray
    border-top 1px solid $lightGray
    box-sizing border-box
    display flex
    height 38px
    width 38px
  & li:nth-child(odd)
    border-left 1px solid $lightGray
  & li:active
    background $lightGrayHighlight
  & li:hover
    background $lightGrayHighlight

.control-panel__svg-icon
  fill $darkGray
  display block
  margin auto
  height 25px
  width 25px

.control-panel__svg-icon--home
  height 21px
  width 21px
